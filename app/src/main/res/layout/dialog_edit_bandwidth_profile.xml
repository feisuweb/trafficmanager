<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile General Details"
        style="@style/Text"
        />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="For example, Reading"
        style="@style/Text"
        />

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="For example, Allows to comfortable surf throw web and read web pages"
        style="@style/Text"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        style="@style/Panel.Back"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Out speed limit (kbps)"
        style="@style/Text.Description"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/edit_out_speed"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="For example 30, which is 0.03 Mbps"
        android:inputType="number"
        style="@style/Text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In speed limit (kbps)"
        style="@style/Text.Description"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/edit_in_speed"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="For example 30, which is 0.03 Mbps"
        android:inputType="number"
        style="@style/Text"
        />

    <Space
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <Button
        android:id="@+id/action_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Apply Changes"
        style="@style/Button.Rect.Action"
        />
</LinearLayout>
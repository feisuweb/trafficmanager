<?xml version="1.0" encoding="utf-8"?>
<team.monroe.org.trafficmanager.view.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/text_app_caption"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@drawable/background_main" />

        <ImageView
            android:id="@+id/image_cloud"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:src="@drawable/cloud_big" />

        <LinearLayout
            android:id="@+id/panel_main"
            style="@style/Panel.Navigation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/image_cloud"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/panel_nav_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_above="@+id/panel_main"
            android:background="@drawable/shadow_up" />

    </RelativeLayout>
</team.monroe.org.trafficmanager.view.MyScrollView>

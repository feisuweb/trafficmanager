<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Panel.Back">

    <!-- The main content view -->
    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/frag_dash_header"
            android:layout_width="fill_parent"
            android:layout_height="80dp"/>

        <FrameLayout
            android:layout_below="@+id/frag_dash_header"
            android:id="@+id/frag_dash_body"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>


        <LinearLayout
            android:id="@+id/layer_shadow"
            android:background="#b2000000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" />

        <FrameLayout
            android:id="@+id/frag_popup"
            android:layout_margin="30dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

    </RelativeLayout>

    <!-- The navigation drawer -->
    <FrameLayout
        android:id="@+id/frag_dash_navigation"
        android:layout_gravity="start"
        android:layout_width="@dimen/panel_navigation_size"
        android:layout_height="fill_parent"/>


</android.support.v4.widget.DrawerLayout>